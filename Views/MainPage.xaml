<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeConsistent.MainPage">
    <ScrollView Padding="8" BackgroundColor="#191919">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0"
                    Background="transparent" Text="ADD" 
                    BorderColor="#424242" 
                    BorderWidth="1"
                    TextColor="White"
                    Clicked="AddTask">
            </Button>
            <VerticalStackLayout Grid.Row="1"
                                 Padding="0, 10, 0, 0"
                                 x:Name="taskStackLayout">
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>
